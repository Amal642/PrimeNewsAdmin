            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aboutustext"
                android:text="hi"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="29dp"
